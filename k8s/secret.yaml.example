################################################################################
# Kubernetes Secret 템플릿
#
# 사용법:
#   1. 이 파일을 k8s/secret.yaml로 복사
#      cp k8s/secret.yaml.example k8s/secret.yaml
#
#   2. 각 키의 값을 base64로 인코딩하여 채워넣기
#      echo -n 'your-value' | base64
#
#   3. 클러스터에 적용
#      kubectl apply -f k8s/secret.yaml
#
# 주의: k8s/secret.yaml은 .gitignore에 등록되어 있어 Git에 커밋되지 않습니다.
################################################################################

apiVersion: v1
kind: Secret
metadata:
  name: playcode-secrets
  namespace: playcode
type: Opaque
data:
  ADMIN_SECRET_KEY: <base64-encoded-value>
  AWS_ACCESS_KEY_ID: <base64-encoded-value>
  AWS_SECRET_ACCESS_KEY: <base64-encoded-value>
  GOOGLE_CLIENT_ID: <base64-encoded-value>
  GOOGLE_CLIENT_SECRET: <base64-encoded-value>
  JWT_SECRET: <base64-encoded-value>
  NAVER_CLIENT_ID: <base64-encoded-value>
  NAVER_CLIENT_SECRET: <base64-encoded-value>
  PORTFOLIO_TOKEN: <base64-encoded-value>
  S3_BUCKET_NAME: <base64-encoded-value>
  SUPERADMIN_SECRET_KEY: <base64-encoded-value>
